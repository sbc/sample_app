.profile
  .main
    %h1
      = gravatar_for @user
      = @user.name
    - unless @user.microposts.empty?
      .microposts
        = render @microposts
      = will_paginate @microposts
  .sidebar.round
    %ul
      %li
        %strong
          Name
        = @user.name
      %li
        %strong
          URL
        = link_to user_path(@user), @user
      %li
        %strong
          Microposts
        = @user.microposts.count

