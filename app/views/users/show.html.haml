.profile
  .main
    %h1
      = gravatar_for @user
      = @user.name
    = render 'follow_form' if signed_in?
    - unless @user.microposts.empty?
      %ul.microposts
        = render :partial => 'shared/feed_item', 
                 :collection => @microposts, 
                 :locals => { :show_user_info => false }
      = will_paginate @microposts
  = render 'shared/sidebar'
